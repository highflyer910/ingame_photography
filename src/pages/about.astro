---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { PERSONAL_INFO } from '../consts';

const { role, name, avatar, contact, about } = PERSONAL_INFO;

const title = `About ${name}`;
---

<Layout title={title}>
  <div class="bg-gradient-to-b from-orange-100 to-orange-200 min-h-screen py-12 sm:py-16 lg:py-20 flex flex-col justify-between">
    <main class="mb-auto">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl text-orange-700 sm:text-4xl lg:text-5xl font-bold text-midnight text-center mb-8 sm:mb-12">
          About Me
        </h1>

        <div class="bg-orange-100 shadow-xl rounded-2xl overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/3 md:flex-shrink-0">
              <div class="image-container h-64 md:h-full">
                <img class="w-full h-full object-cover" src={avatar} alt={`Portrait of ${name}`} />
              </div>
            </div>
            <div class="p-8 md:w-2/3">
              <div class="uppercase tracking-wide text-sm text-orange-700 font-semibold mb-1">{role}</div>
              <h2 class="text-2xl font-bold text-orange-800 mb-2">{name}</h2>
              <div class="mt-4 space-y-4">
                {about.split('.').map((text) => (
                  <p class="text-gray-600 leading-relaxed">{text.trim()}.</p>
                ))}
              </div>
              <div class="mt-8">
                <a
                  href={contact}
                  class="inline-block bg-orange-700 text-white text-sm font-semibold rounded-lg px-6 py-3 transition duration-300 ease-in-out hover:bg-orange-800 focus:outline-none focus:ring-2 focus:ring-orange-600 focus:ring-offset-2"
                >
                  Contact Me
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  main {
    animation: fadeIn 0.5s ease-out;
  }

  .image-container {
    position: relative;
    overflow: hidden;
  }

  .image-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 69, 0, 0.3);
    mix-blend-mode: color;
    transition: opacity 0.3s ease;
  }

  .image-container:hover::after {
    opacity: 0;
  }
</style>