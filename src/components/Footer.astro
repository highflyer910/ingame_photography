---
import { SOCIAL, PERSONAL_INFO } from '../consts';
import Icon from './Icon.astro';

const links = [
  {url: '/', title: 'Home'},
  {url: '/about', title: 'About'}
];
const year = new Date().getFullYear();
const { name } = PERSONAL_INFO;
---

<footer class="text-orange-800">
  <div class="flex flex-col items-center mt-12 gap-4 mb-4">
    <ul class="flex flex-wrap justify-center md:justify-start gap-x-4 gap-y-2 md:gap-6">
      {links.map((link) => <li class="mr-2"><a href={link.url} class="hover:text-orange-700">{link.title}</a></li>)}
    </ul>
    <div class="flex gap-4">
      {
        SOCIAL.map((social) => (
          <a href={social.href} target="_blank" class="text-orange-700 hover:text-orange-700">
            <Icon icon={social.icon} />
          </a>
        ))
      }
    </div>

    <div class="text-sm text-center">
      Â© {year} - {name}
    </div>
  </div>
</footer>

<style>
  a {
    @apply transition-colors duration-300 ease-in-out;
  }

  :global(.icon) {
    @apply w-6 h-6 fill-current;
  }
</style>